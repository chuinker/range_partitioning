 15000
(2 rows)

select create_partition('part_test.foo','[10000,)');
 create_partition 
------------------
 
(1 row)

select * from p_info order by 1,2;
 relname | partition_number |    range     
---------+------------------+--------------
 foo_p0  |                0 | (,5000)
